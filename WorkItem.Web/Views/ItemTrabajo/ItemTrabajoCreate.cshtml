@model ItemTrabajoDto

<form asp-action="ItemTrabajoCreate">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Crear Item Trabajo</h1>

        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;"> Titulo</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Descripcion</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Fecha Entrega</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="FechaEntrega" class="form-control" />
                <span asp-validation-for="FechaEntrega" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Relevancia</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Relevancia" class="form-control" />
                <span asp-validation-for="Relevancia" class="text-danger"></span>
            </div>
            <div class="col-5 offset-2">

                <a asp-action="Index" class="btn-primary btn form-control ">Atras</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Crear" class="btn btn-success form-control" />
            </div>

        </div>

        <div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}